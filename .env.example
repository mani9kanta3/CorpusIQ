# =============================================================================
# DocuMind Environment Variables
# =============================================================================
# INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. NEVER commit .env to git (it's in .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=DocuMind
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:password@localhost:5432/documind
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=documind
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis (Caching & Celery Broker)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# Vector Database
# -----------------------------------------------------------------------------
# Option 1: Pinecone (Cloud)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=documind

# Option 2: Qdrant (Self-hosted)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documind

# Which to use: pinecone or qdrant
VECTOR_STORE_TYPE=qdrant

# -----------------------------------------------------------------------------
# LLM Provider
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Which to use: openai or anthropic
LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# Embedding Model
# -----------------------------------------------------------------------------
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# -----------------------------------------------------------------------------
# OCR Settings
# -----------------------------------------------------------------------------
TESSERACT_PATH=/usr/bin/tesseract
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Which to use: tesseract or aws_textract
OCR_PROVIDER=tesseract

# -----------------------------------------------------------------------------
# Reranking
# -----------------------------------------------------------------------------
COHERE_API_KEY=your-cohere-api-key

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,txt,png,jpg,jpeg
UPLOAD_DIR=./uploads

# -----------------------------------------------------------------------------
# Search Settings
# -----------------------------------------------------------------------------
DEFAULT_TOP_K=10
RERANK_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# CORS (Frontend URL)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
